{
  "name": "saadhanaboard-backend",
  "version": "1.0.0",
  "description": "Backend for SaadhanaBoard - A spiritual productivity application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "admin:create-demo": "node ./scripts/admin/setup_admin.js",
    "admin:setup": "node ./scripts/admin/setup_admin.js",
    "admin:create-default": "node ./scripts/admin/setup_admin_complete.js",
    "user:create-demo": "node ./scripts/createDemoUser.js",
    "user:verify-demo": "node ./scripts/verifyDemoUser.js",
    "debug:admin": "node ./scripts/admin/debug_admin_login.js",
    "fix:admin": "node ./scripts/admin/fix_admin_setup.js",
    "test:admin-login": "node -e \"console.log('Use debug:admin')\"",
    "check:admin": "node ./scripts/admin/setup_admin.js",
    "reset:admin": "node ./scripts/admin/fix_admin_setup.js --force-reset",
    "logs:admin": "node -e \"console.log('Check logs in backend/logs')\"",
    "test": "mocha tests/integration.test.js tests/tier1-crud-operations.test.js tests/tier2-feature-operations.test.js tests/tier3-advanced-operations.test.js",
    "test:validation": "node tests/mongodb-validation.js",
    "docs:generate": "node ./scripts/generateApiDocs.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron-parser": "^4.0.6",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "googleapis": "^164.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.20.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.2",
    "pdfkit": "^0.14.0",
    "pg": "^8.12.0",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "systeminformation": "^5.27.10",
    "ua-parser-js": "^1.0.35"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "mocha": "^11.7.3",
    "nodemon": "^3.1.10",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0",
    "vite-bundle-visualizer": "^1.2.1"
  },
  "overrides": {
    "glob": "^10.4.5",
    "node-domexception": "npm:domexception@^4.0.0",
    "inflight": "^1.0.6"
  },
  "keywords": [
    "saadhana",
    "spiritual",
    "productivity",
    "backend",
    "nodejs",
    "express"
  ],
  "author": "SaadhanaBoard Team",
  "license": "MIT"
}

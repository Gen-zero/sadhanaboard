# Production Environment Configuration for SadhanaBoard
# Domain: sadhanaboard.com

# Database Configuration
DB_USER=postgres
DB_HOST=database
DB_NAME=saadhanaboard
DB_PASSWORD=postgres
DB_PORT=5432

# Alternative: Supabase Database URL (if using Supabase)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration - MUST BE CHANGED FOR PRODUCTION
JWT_SECRET=saadhanaboard_production_secret_key_2025

# Server Configuration
PORT=3004
BACKEND_URL=https://sadhanaboard.com

# CORS Configuration for production domain
CORS_ORIGIN=https://sadhanaboard.com,https://www.sadhanaboard.com

# Admin Authentication Configuration - MUST BE CHANGED FOR PRODUCTION
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@sadhanaboard.com
ADMIN_PASSWORD=saadhanaboard_secure_admin_password_2025
ADMIN_FORCE_UPDATE=0

# Demo Admin Configuration (for testing)
DEMO_ADMIN_EMAIL=kali@example.com

# Admin JWT Configuration
ADMIN_TOKEN_EXPIRES_IN=7d

# Admin Session Configuration
ADMIN_SESSION_TIMEOUT_MINUTES=60

# Polling Intervals (in milliseconds)
DASHBOARD_POLL_MS=15000
BI_POLL_MS=20000
SYSTEM_METRICS_POLL_MS=5000

# SSL Configuration (for production)
PGSSL=false

# Admin Account Lock Settings
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCK_MINUTES=30
ADMIN_AUTO_UNLOCK=true

# Admin Security Logging
ADMIN_LOG_FAILED_ATTEMPTS=true
ADMIN_LOG_LOCK_EVENTS=true
ADMIN_ALERT_ON_LOCK=false

# Admin Account Management
ADMIN_ALLOW_SELF_UNLOCK=false
ADMIN_REQUIRE_2FA=true

# Production-specific settings
NODE_ENV=production
LOG_LEVEL=info